<header class= "col-xm-12 col-md-12 col-lg-12 header" >
  <%= link_to "MIRACOLO", root_path,:style => "color:#e6e6e6;" %>
</header>

<%= form_for @content, :url => contents_update_path do |f| %>


<div class="col-xs-2 col-md-2 col-lg-2"></div>
<div class="col-xs-7 col-md-7 col-lg-7" style="background-color: #e6e6e6;">
  <div class="col-xs-12 col-md-12 col-lg-12">
    <div class="col-xs-12 col-md-12 col-lg-12">
      <div class="field " >
        <%= f.label :目標を決めましょう %>
        <%= f.text_field :title, :class => "col-xs-8 col-md-8 col-lg-8" %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-12 col-lg-12">
    <div class="col-xs-12 col-md-12 col-lg-12">
      <div class="field " >
        <%= f.label :具体的にすることを書いてください。 %>
        <%= f.text_area :text, :class => "col-xs-10 col-md-10 col-lg-10" %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-12 col-lg-12">
    <div class="col-xs-12 col-md-12 col-lg-12">
      <div class="field">
        <%= f.label "期限を決めましょう。" %>
        <%= f.datetime_select :start %>〜
      </div>
      <div class="field">〜
        <%= f.datetime_select :end %>
      </div>
    </div>
    <div class="col-xs-12 col-md-12 col-lg-12" style="margin-top: 20px; margin-right: auto; margin-left: auto;">
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
</div>

<div class="col-xs-3 col-md-3 col-lg-3">
  <div id="menu1"><%= link_to 'メインページ', main_path %> </div>
  <div id="menu2"><%= link_to 'アカウント', users_edit_path %></div>
  <div id="menu3"><%= link_to 'ログアウト', logout_path %></div>
</div>

<% end %>
