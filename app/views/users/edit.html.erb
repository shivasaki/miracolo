<h1  class=" col-xs-12 col-sm-12 col-md-12 col-lg-12">ユーザー編集</h1>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <%= form_for (@user), :url => users_update_path do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="col-xs-12 col-md-12 col-lg-12" style="text-align:center">
      <br>
      <div class="image" ></div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="field">
        <%= f.label :name, "ユーザー名" %><br>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="field">
        <%= f.label :password, "パスワード" %><br>
        <%= f.password_field :password %>
      </div>
    </div>
    <!--ごめんチェックめんどいからそのうち実装するわ笑
    <div class="field">
      Password again<br>
      <textarea class="name" type="passwerd"></textarea>
    </div>-->
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="field">
        <%= f.submit "完了" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
