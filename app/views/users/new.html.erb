
  <div class="row">
  <%= link_to "MIRACOLO", root_path,:style => "color:#e6e6e6; font-size:50px;", :class => "col-xs-12 col-md-12 col-lg-12 header" %>
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 menubar"><%= link_to "ログイン", login_path,:style => "color:#e5e5e5;" %></div>
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 menubar"><%= link_to "トップページ", root_path,:style => "color:#e5e5e5;" %></div>
 
  <h1 style="margin-left:70px;" class=" col-xs-12 col-sm-12 col-md-12 col-lg-12">新規登録</h1>
</div>

<%= form_for (@user), :url => users_create_path do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="col-xs-12 col-md-12 col-lg-12" style="text-align:center">
      <br>
      <div class="image" ></div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="field">
        <%= f.label :name, "ユーザー名" %><br>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="field">
        <%= f.label :password, "パスワード" %><br>
        <%= f.password_field :password %>
      </div>
    </div>
    <!--ごめんチェックめんどいからそのうち実装するわ笑
    <div class="field">
      Password again<br>
      <textarea class="name" type="passwerd"></textarea>
    </div>-->
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="field">
        <%= f.submit "完了" %>
      </div>
    </div>
  </div>
<% end %>
